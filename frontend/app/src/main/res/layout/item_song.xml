<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#1E1E1E">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_note" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Song 1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist Name"
                android:textColor="#B3B3B3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pop"
                android:textColor="#1DB954"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_play_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 lượt nghe"
                android:textColor="#666666"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Nút thêm Playlist -->
        <ImageView
            android:id="@+id/btn_add_to_playlist"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_playlist_add"
            android:padding="4dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Add to Playlist" />

        <ImageView
            android:id="@+id/btn_remove_from_playlist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Xoá khỏi playlist"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:tint="#FF6B6B" />

        <!-- Nút favourite -->
        <ImageView
            android:id="@+id/btn_favourite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_favorite_border"
            android:padding="4dp"
            android:contentDescription="Favourite" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
